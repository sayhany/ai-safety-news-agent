# AI Safety Newsletter Agent Configuration

# ── LLM Configuration ──────────────────────────────────────────────────────
# OpenRouter API key (required)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# ── Ingestion Settings ─────────────────────────────────────────────────────
# Maximum concurrent requests per domain
MAX_PER_DOMAIN=10

# Global semaphore limit for concurrent requests
GLOBAL_PARALLEL=30

# User agent for web requests
USER_AGENT=AISafetyNewsletterBot/0.1 (+https://github.com/your/repo)

# ── Scoring Weights ────────────────────────────────────────────────────────
# Source priority weight (trusted sources)
W_SOURCE_PRIORITY=0.4

# Recency weight (newer articles score higher)
W_RECENCY=0.25

# Government/official source weight
W_GOV=0.2

# LLM-assessed importance weight
W_LLM_IMPORTANCE=0.15

# ── Storage & Caching ──────────────────────────────────────────────────────
# Directory for intermediate artifacts (Parquet/JSONL)
DATA_DIR=./data

# Directory for HTTP cache
CACHE_DIR=./cache/http

# ── Processing Settings ────────────────────────────────────────────────────
# Vector similarity threshold for deduplication (0.0-1.0)
DEDUPE_THRESHOLD=0.85

# Maximum articles in final newsletter
MAX_ARTICLES=20

# ── API Settings ───────────────────────────────────────────────────────────
# HTTP API port (if using web interface)
API_PORT=8000

# API host binding
API_HOST=127.0.0.1

# ── Logging ────────────────────────────────────────────────────────────────
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable structured JSON logging
JSON_LOGGING=true

# ── Security ───────────────────────────────────────────────────────────────
# Data retention period in days
DATA_RETENTION_DAYS=30

# Enable HTTPS-only mode
HTTPS_ONLY=true
